<html lang="es">
    <!-- Head -->
  <%- include('../partials/head.ejs',{style:"usersRegister"}) %>
  <body>
    <!--Cabezera-->
    <%- include('../partials/header') %>

<main class="registro">
      <h1>Registrar</h1>

      <form action="/users/register" method="post" enctype="multipart/form-data">
        <div class="nombre-registro">
          <label for="name">Nombre:</label>
          <input type="text" name="name" id="name" />
          <% if (locals.errors?.name) { %>
          <p class="error"><%= locals.errors.name.msg %></p>
          <% } %>
        </div>

        <div class="apellido-registro">
          <label for="surname">Apellido:</label>
          <input type="text" name="surname" id="surname" />
          <% if (locals.errors?.surname) { %>
          <p class="error"><%= locals.errors.surname.msg %></p>
          <% } %>
        </div>

        <div class="email-registro">
          <label for="email">Email:</label>
          <input type="email" name="email" id="email" />
          <% if (locals.errors?.email) { %>
          <p class="error"><%= locals.errors.email.msg %></p>
          <% } %>
        </div>

        <div class="contraseña-registro">
          <label for="password">Contraseña:</label>
          <input type="password" name="password" id="password" />
          <% if (locals.errors?.password) { %>
          <p class="error"><%= locals.errors.password.msg %></p>
          <% } %>
        </div>

        <div class="categoria-registro">
          <label for="category">Categoria:</label>
          <input type="text" name="category" id="category"  />
        </div>

        <div class="avatar-registro">
          <label for="avatar">Foto Perfil</label>
          <input type="file" name="avatar" id="avatar" />
        </div>

        <button type="submit">Registrarse</button>
      </form>
      <!-- Script JS -->
      <script src="https://unpkg.com/validator@latest/validator.min.js"></script>
      <script src="/js/validations/register.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
      
    </main>
  </body>
  </html>