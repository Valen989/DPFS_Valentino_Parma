<html lang="es">
  <%- include('../partials/head' ), {
    title : "Home"
}%>
  <body>
    <!--Cabezera-->
    <%- include('../partials/header') %>
    <h1>Iniciar sesión</h1>

    <form action="/users/login" method="post">
      <div>
        <label for="email">Email</label>
        <input type="text" name="email" id="email" placeholder="jose@gmail.com"/>
        <% if (locals.errors?.email) { %>
          <p class="error"><%= locals.errors.email.msg %></p>
          <% } %>
      </div>

      <div>
        <label for="password">Contraseña</label>
        <input type="password" name="password" id="password" />
        <% if (locals.errors?.password) { %>
          <p class="error"><%= locals.errors.password.msg %></p>
          <% } %>
      </div>

      <div>
        <label for="rememberme">Recordarme</label>
        <input type="checkbox" name="rememberme" id="rememberme" />
      </div>

      <button type="submit">Iniciar sesión</button>

      <!-- Script JS -->
    <script src="https://unpkg.com/validator@latest/validator.min.js"></script>
    <script src="/js/validations/login.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    </form>