<html lang="es">
  <body>
      <!-- Head -->
  <%- include('../partials/head.ejs',{style:"productsCreate"}) %>
    <!--Cabezera-->
    <%- include('../partials/header') %>
<main>
  <h2>Agregar Producto</h2>
        <form action="/productos/crear" method="post" enctype="multipart/form-data">
            <label for="title">Título del Producto:</label>
            <input type="text" id="title" name="title" required>

            <label for="material">Material:</label>
            <input type="text" id="material" name="material" required>

            <label for="color">Color:</label>
            <input type="text" id="color" name="color" required>

            <label for="embroidery">Bordado:</label>
            <input type="text" id="embroidery" name="embroidery" required>

            <label for="embroideryColor">Color del Bordado:</label>
            <input type="text" id="embroideryColor" name="embroideryColor" required>

            <label for="price">Precio:</label>
            <input type="number" id="price" name="price" required min="0">

            <label for="size">Tamaño:</label>
            <input type="text" id="size" name="size" required>

            <label for="image">Imagen del Producto:</label>
            <input type="file" id="image" name="image" accept="image/*" >
            

            <button type="submit">Agregar Producto</button>
        </form>
   
</main>