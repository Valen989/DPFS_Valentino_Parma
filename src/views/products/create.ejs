    <%- include('../partials/header') %>
<main>
  <h2>Agregar Producto</h2>
        <form action="/productos/crear" method="post" enctype="multipart/form-data">
            <label for="title">TÃ­tulo del Producto:</label>
            <input type="text" id="title" name="title" required>

            <label for="color">Color:</label>
            <input type="text" id="color" name="color" required>

            <label for="decorated">Decorado:</label>
            <input type="text" id="decorated" name="decorated" required>

            <label for="colorDecorated">Color del Decorado:</label>
            <input type="text" id="colorDecorated" name="colorDecorated" required>

            <label for="price">Precio:</label>
            <input type="number" id="price" name="price" required min="0">

            <label for="image">Imagen del Producto:</label>
            <input type="file" id="image" name="image" accept="image/*" >
            

            <button type="submit">Agregar Producto</button>
        </form>
   
</main>